{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "lib": ["es5", "es6", "es2016", "es2017.object", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "types",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "types": [
      "jest", "chrome", "node"
    ],
    "declaration": true
  },
  "include": [
    "lib/**/*.ts"
  ]
}